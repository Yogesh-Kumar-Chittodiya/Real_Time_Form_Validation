
<body>

<style>
    .ring{
    width:400px;
    height:400px;
    border: 0px solid #000;
    border-radius: 50%;
    position:absolute;
    top:25vh;
    left:35vw;
}

.ring:nth-child(1){
    border-left-width: 10px;
    border-color:rgb(25,255,255);
    animation: rotate1 2s linear infinite;
}
.ring:nth-child(2){
    border-right-width: 10px;
    /* border-top-width:10px; */
    border-color:rgb(255,25,255);
    animation: rotate 2s linear infinite;
    animation-delay:2s;
}
.ring:nth-child(3){
    border-bottom-width: 5px;
    /* border-top-width:10px; */
    border-color:rgb(255,255,25);
    animation: rotate1 1s linear infinite;
}
.ring:nth-child(1):hover{
    transform:rotate(360deg);
    transition:2s;
}
.ring:nth-child(2):hover{
    animation:transform(rotate(-360deg));
    transition:2s;
}
.ring:nth-child(3):hover{
    transform:rotate(4800deg);
    transition:10s;
    border-color:green;
    /* transition:15s; */
}

.data{
    display:inline-block;
    position:relative;
    top:30vh;
    left:33vw;
    /* transform:translate(350%,250%); */
}
</style>


<div class="container">
    <div class="ring" id="1"></div>
    <div class="ring" id="2"></div>
    <div class="ring" id="3"></div>
    <h1 class="text-center mt-4" >Hi, It's show Time!</h1>
    <div class="data" id="data" onclick="chang()">
        <div>Title : <%= @post.title %></div>
        <div>Body : <%= @post.body%></div>
        <%= link_to 'Back', :back %>
    </div>
</div>
</body>
