<div class="col-12">
<div class="col-10 mx-auto mt-4"> 
    <h1 class="mt-3 mb-3">POSTS</h1>
    <%=link_to 'Create New Post', new_post_path, class: 'btn btn-primary rounded-0' %>
</div>

<div class="col-10 mx-auto">
<table class="table table-striped table-bordered table-hover m-4 mx-auto" style="border-top-width:4px; border:blue; border-left-color:green; border-right-color:red;">
    <thead>
        <tr class="col-8" >
            <th class="col-1" style="background:blue;">ID</th>
            <th class="col-2" style="background:blue;">Title</th>
            <th class="col-2" style="background:blue;">Body</th>
            <th class="col-3" colspan="3" style="background:blue;">Actions</th>
        </tr>
    </thead>
    <tbody class="">
        <% @posts.each do |post| %>
            <tr class="col-8">
                <td class="col-1"><%= post.id%></td>
                <td class="col-2"><%= post.title%></td>
                <td class="col-2"><%= post.body%></td>
                <td class="table-success" style="border-right-color:red;">
                    <%= link_to "view", post_path(post), class: 'btn btn-info rounded-0' %>
                </td>
                <td class="table-warning" style="border-right-color:red;">
                    <%= link_to "edit", edit_post_path(post), class: 'btn btn-primary rounded-0' %>
                </td>
                <td class="table-danger" style="border-right-color:red;">
                    <%= button_to "delete", post_path(post), class:'btn btn-danger rounded-0', method: :delete, data: {confirm: "are you sure?"} %>
                </td>
            </tr>
        <%end%>
    </tbody>
</table>
</div>
</div>
